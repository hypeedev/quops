{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Example Config",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the service"
    },
    "port": {
      "type": "number",
      "default": 8080
    },
    "logLevel": {
      "type": "string",
      "enum": ["debug", "info", "warn", "error"],
      "default": "info"
    },
    "test": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "string",
          "enum": ["int", "array", "object"]
        }
      ]
    }
  },
  "required": ["name"]
}
